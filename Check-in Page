<body>

    <h1>Radisson Hotel Check In</h1>

    <div class="container">
        <input type="text" id="name" placeholder="Customer Name">

        <label>Gender:</label><br>
        <div style="display: flex; justify-content: center; gap: 20px; margin-bottom: 15px;">
            <label><input type="radio" name="gender" value="Male"> Male</label>
            <label><input type="radio" name="gender" value="Female"> Female</label>
        </div>

        <input type="number" id="roomNumber" min="1" max="10" placeholder="Room Number (1-10)">
        <input type="number" id="numPeople" min="1" placeholder="Number of People">

        <select id="countryCode">
            <option value="+91">+91 (India)</option>
            <option value="+1">+1 (USA)</option>
            <option value="+44">+44 (UK)</option>
            <option value="+33">+33 (France)</option>
        </select>

        <input type="text" id="phone" placeholder="Phone Number (10 digits)">
        <input type="number" id="age" placeholder="Age">
        <input type="text" id="origin" placeholder="City or Country">

        <button onclick="checkIn()">Check In</button>

        <div class="result" id="result"></div>
    </div>

    <script>
        function getMaxPeopleForRoom(roomNumber) {
            return (roomNumber >= 1 && roomNumber <= 4) ? 4 : 2;
        }

        function checkIn() {
            const name = document.getElementById('name').value.trim();
            const genderEls = document.getElementsByName('gender');
            let gender = "";
            for (const g of genderEls) {
                if (g.checked) gender = g.value;
            }
            const roomNumber = parseInt(document.getElementById('roomNumber').value);
            const numPeople = parseInt(document.getElementById('numPeople').value);
            const countryCode = document.getElementById('countryCode').value;
            const phone = document.getElementById('phone').value.trim();
            const age = document.getElementById('age').value;
            const origin = document.getElementById('origin').value.trim();
            const checkInTime = new Date().toLocaleString();

            if (!name || !gender || !roomNumber || !numPeople || !phone || !age || !origin) {
                alert('Please fill all fields.');
                return;
            }

            const maxPeople = getMaxPeopleForRoom(roomNumber);
            if (numPeople > maxPeople) {
                alert(`Room ${roomNumber} allows a maximum of ${maxPeople} people.`);
                return;
            }

            const fullPhone = countryCode + phone;

            const customerData = {
                name, gender, roomNumber, numPeople, fullPhone, age, origin, checkInTime
            };

            localStorage.setItem('customerData', JSON.stringify(customerData));

            document.getElementById('result').innerHTML = `
                <h3>Check-In Successful</h3>
                <p><strong>Name:</strong> ${name}</p>
                <p><strong>Gender:</strong> ${gender}</p>
                <p><strong>Room Number:</strong> ${roomNumber}</p>
                <p><strong>Number of People:</strong> ${numPeople}</p>
                <p><strong>Contact:</strong> ${fullPhone}</p>
                <p><strong>Age:</strong> ${age}</p>
                <p><strong>Origin:</strong> ${origin}</p>
                <p><strong>Check-In Time:</strong> ${checkInTime}</p>
            `;
        }
    </script>

</body>

