<body>

    <h1>Radisson Hotel Check Out</h1>

    <div class="container">
        <input type="text" id="checkoutName" placeholder="Enter Customer Name">
        <input type="number" id="checkoutRoomNumber" min="1" max="10" placeholder="Enter Room Number">

        <button onclick="checkOut()">Check Out</button>

        <div class="result" id="checkoutResult"></div>
    </div>

    <script>
        const PRICE_PER_PERSON = 15999;
        const GST_PERCENT = 18;

        function checkOut() {
            const name = document.getElementById('checkoutName').value.trim();
            const roomNumber = document.getElementById('checkoutRoomNumber').value;
            const customerData = JSON.parse(localStorage.getItem('customerData'));

            if (!name || !roomNumber) {
                alert('Please fill all fields.');
                return;
            }

            if (!customerData || customerData.name !== name || customerData.roomNumber != roomNumber) {
                alert('No matching check-in record found.');
                return;
            }

            const gstPerPerson = PRICE_PER_PERSON * (GST_PERCENT / 100);
            const totalPerPerson = PRICE_PER_PERSON + gstPerPerson;
            const totalBill = totalPerPerson * customerData.numPeople;
            const checkoutTime = new Date().toLocaleString();

            document.getElementById('checkoutResult').innerHTML = `
                <h3>Check-Out Summary</h3>
                <p><strong>Name:</strong> ${customerData.name}</p>
                <p><strong>Room Number:</strong> ${customerData.roomNumber}</p>
                <p><strong>Number of People:</strong> ${customerData.numPeople}</p>
                <p><strong>Check-In Time:</strong> ${customerData.checkInTime}</p>
                <p><strong>Check-Out Time:</strong> ${checkoutTime}</p>
                <p><strong>Total Bill (₹15999 + 18% GST per person):</strong> ₹${totalBill.toFixed(2)}</p>
            `;

            
            localStorage.removeItem('customerData');
        }
    </script>

</body>

</html>
